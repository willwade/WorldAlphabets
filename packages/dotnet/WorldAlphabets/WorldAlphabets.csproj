<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net6.0</TargetFrameworks>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <Authors>Will Wade</Authors>
    <Company>WorldAlphabets</Company>
    <PackageId>WorldAlphabets</PackageId>
    <Version>{{version}}</Version>
    <Title>WorldAlphabets</Title>
    <Description>World alphabets, keyboard layouts, diacritic utilities, and language detection for .NET. Port of the WorldAlphabets Python/Node library.</Description>
    <RepositoryUrl>https://github.com/willwade/WorldAlphabets</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <PackageOutputPath>../../../artifacts/nuget</PackageOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="../../../data/alphabets/*.json" Link="Resources/alphabets/%(Filename)%(Extension)" />
    <EmbeddedResource Include="../../../data/layouts/*.json" Link="Resources/layouts/%(Filename)%(Extension)" />
    <EmbeddedResource Include="../../../data/index.json" Link="Resources/index.json" />
    <EmbeddedResource Include="../../../data/script_index.json" Link="Resources/script_index.json" />
    <EmbeddedResource Include="../../../data/kbdlayouts.json" Link="Resources/kbdlayouts.json" />
    <EmbeddedResource Include="../../../data/char_index.json" Link="Resources/char_index.json" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Text.Json" Version="8.0.5" />
  </ItemGroup>
</Project>

